# Development Environment Variables
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# AWS Configuration (optional - can be set via UI)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key  
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h
# Database Configuration (for future use)
DATABASE_URL=postgresql://s3manager:s3manager_password@localhost:5432/s3manager
POSTGRES_USER=s3_manager
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=s3_manager

# Cache Configuration (for future use)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# S3 Configuration
S3_UPLOAD_MAX_SIZE=5368709120  # 5GB in bytes
S3_MULTIPART_THRESHOLD=104857600  # 100MB in bytes
S3_PRESIGNED_URL_EXPIRES=3600  # 1 hour

# Security & Rate Limiting
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration (for future use)
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Debug Configuration
DEBUG=s3-manager:*
DEBUG_LEVEL=info
